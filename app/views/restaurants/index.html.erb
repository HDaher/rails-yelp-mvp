<h1>Restaurants:</h1>
<ol>
  <% @restaurants.each do |restaurant| %>
    <li>
      <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
      <h5><%= restaurant.address %></h5>
      <h6><%= restaurant.category.capitalize %></h6>
    </li>
  <% end %>
</ol>
<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary m-2" %>
