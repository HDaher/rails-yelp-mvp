<h1>Add a Restaurant</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for [@restaurant] do |f| %>
        <%= f.input :name%>
        <%= f.input :address%>
        <%= f.input :category%>
        <%= f.input :phone_number%>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
